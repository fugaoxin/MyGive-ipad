.emoji-wysiwyg-editor {
	/*border: 1px solid #d0d0d0;*/
    margin-top: -25px;
	overflow: auto;
	outline: none;
}
.emoji-wysiwyg-editor img {
	/*width: 45px;*/
	height: 40px;
	vertical-align: middle;
	margin: -3px 0 0 0;
}
.emoji-menu {
	position: absolute;
	/* z-index: 999; */
	width: 100%;
	/*width: 182px\9;*/
    display: none;
	margin-top:-6px;
	padding: 0;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	left: 0px!important;
}
.emoji-menu > div {
	max-height: 250px;
	margin-top:100px;
	width:100%;
	overflow: auto;
	background: #fff;
    /*-webkit-border-radius: 3px;
     -moz-border-radius: 3px;
     border-radius: 3px;
     -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
     box-sizing: border-box;
     -webkit-box-shadow: 0 1px 5px rgba(0,0,0,0.3);
     -moz-box-shadow: 0 1px 5px rgba(0,0,0,0.3);
     box-shadow: 0 1px 5px rgba(0,0,0,0.3);*/
}
.emoji-menu img {
	/*width: 45px;*/
	height: 40px;
	vertical-align: middle;
	border: 0 none;
}
.emoji-menu a {
	margin: -1px 0 0 -1px;
	border: 0px solid #f2f2f2;
	padding: 5px;
	display: none;
	float: left;
}
.emoji-menu a:hover {
	background-color: #fffae7;
}
.emoji-menu:after {
	content: ' ';
	display: none;
	clear: left;
}
.emoji-menu a .label {
	display: none;
}