        $(document).ready(function () {
            var $wysiwyg = $('.emojis-box').emojiarea({
                wysiwyg: true
            });
            $('#ctl00_cnt_PageContent_lbl_ErrMsg_Empty').hide();
            $('#ctl00_cnt_PageContent_lbl_ErrMsg_Exceed').hide();
        });
        function getEmojiText() {
            var commentBox = document.getElementById("ctl00_cnt_PageContent_txt_Comment")
            return $('<div/>').text(commentBox.value).html();
        }
        function formValidation(control) {
            var commentBox = document.getElementById("ctl00_cnt_PageContent_txt_Comment")
            if (commentBox.value === "") {
                $('#ctl00_cnt_PageContent_lbl_ErrMsg_Empty').show();
            } else if ($('<div/>').text(commentBox.value).html().length >= 500) {
                $('#ctl00_cnt_PageContent_lbl_ErrMsg_Exceed').show();
            } else {
                alert($('<div/>').text(commentBox.value).html());
            }
        }
    </script>
    
